{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "target": "es6",
    "outDir": "./build"
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
},
  "include": ["server/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
