{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": false,
    "baseUrl": ".",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "target": "es6",
    "outDir": "./build",
    "lib": [
      "es2019"
    ],
    "paths": {
      "*": [
        "node_modules/",
        "src/types/*"
      ]
    }
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  },
  "include": [
    "server/**/*", "md-seed-config.js"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}